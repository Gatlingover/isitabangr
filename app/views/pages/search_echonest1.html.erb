<%= link_to "go home", root_path %>
<% @results.each do |result| %>

<hr>
<%= is_bangr?(result) %>
Title: <%= result[:title] %>
Artist: <%= result[:artist_name] %>
Id: <%= result[:id] %>
<% if result[:tracks][0] %>
<img src="<%= result[:tracks][0][:release_image] %>">
<% else %>
<img src="/assets/default.png">
<% end %>
<% result[:audio_summary].each do |key,value| %>
<%= key %>
<%= value %>
<br>

<% end %>
<hr>
<%= form_for(Song.new) do |f| %>
  <%= f.hidden_field :title, value: result[:title] %>
  <%= f.hidden_field :artist, value: result[:artist_name] %>
  <%= f.hidden_field :echonest, value: result[:id] %>
  <% if result[:tracks][0] %>
	<%= f.hidden_field :image, value: result[:tracks][0][:release_image] %>
	<% else %>
	<%= f.hidden_field :image, value: '/assets/default.png' %>
  <% end %>
  
  <%= f.hidden_field 'bangr', value: is_bangr?(result)  %>
  <%= f.submit %>
 <% end %>

<% end %>